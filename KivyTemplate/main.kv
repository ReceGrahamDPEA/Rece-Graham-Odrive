<MainScreen>:

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: right_button
        text: '>'
        font_size: self.width * .5
        size_hint: .1, 1
        pos_hint: {"x": .9, "y":0}
        color: 0, 1, 0, 1
        on_press: root.switch_to_traj()

    DPEAButton:
        id: left_button
        text: "<"
        font_size: self.width * .5
        size_hint: .1, 1
        pos_hint: {"x": 0, "y":0}
        color: 1, 0, 0, 1
        on_press: root.switch_to_gpio()

    DPEAButton:
        id: quit_button
        text: "quit"
        font_size: self.width * .5
        size_hint: .1, .1
        pos_hint: {"x": .5, "y": .25}
        color: 0, 0, 1, 1
        on_press: root.quit()

<TrajectoryScreen>:

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text:'back'
        size: 100, 100
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        color: 0, 1, 0, 1
        on_press: root.switch_screen()

    DPEAButton:
        id: simple_velocity_button
        text:'simple'
        size: 100, 100
        pos_hint: {"center_x": 0.5, "center_y":0.25}
        color: .25, 1, 0, 1
        on_press: root.simple_velocity()

<GPIOScreen>:

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text:'back'
        size: 100, 100
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        color: 1, 0, 0, 1
        on_press: root.switch_screen()